<ResourceDictionary
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WPCKillerApp.App"
        x:Class="WPCKillerApp.App.Background">

    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="WPCKillerApp" IsEnabled="False"/>
        <Separator/>
        <MenuItem Header="Settings" Click="MenuItemSettings_Click"/>
        <Separator/>
        <MenuItem Header="Exit" Click="MenuItemExit_Click"/>
    </ContextMenu>

    <local:MainViewModel x:Key="MainViewModel"/>

    <tb:TaskbarIcon x:Key="TaskbarIcon" ContextMenu="{StaticResource SysTrayMenu}" TrayMouseDoubleClick="TaskbarIcon_DoubleClick" ToolTipText="WPCKillerApp" DataContext="{StaticResource MainViewModel}">
        <tb:TaskbarIcon.Style>
            <Style TargetType="tb:TaskbarIcon">
                <Setter Property="IconSource" Value="pack://application:,,,/App/Res/wpcmonxlight.ico"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSafeMode}" Value="True">
                        <Setter Property="IconSource" Value="pack://application:,,,/App/Res/wpcmon.ico"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </tb:TaskbarIcon.Style>
    </tb:TaskbarIcon>
</ResourceDictionary>