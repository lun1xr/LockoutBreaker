<Window x:Class="WPCKillerApp.App.LaunchOpSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPCKillerApp.App"
    Title="Settings" Height="auto" Width="auto" PreviewKeyDown="Window_PreviewKeyDown" Name="Window" Icon="Res/wpcmonxlight.ico">

    <Grid Margin="20">
        <StackPanel>
            <Border DockPanel.Dock="Top" Height="64" Padding="10" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="0 0 0 1.5">
                <StackPanel Orientation="Horizontal">
                    <Grid>
                        <Image Source="Res/wpcmonxdark.png" Margin="0,0,10,0" Name="Image"/>
                        <CheckBox Background="Transparent" BorderBrush="Transparent" Foreground="Transparent" Name="ImageCheck" IsChecked="False" Opacity="0"/>
                    </Grid>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="WPC Killer" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Version 0.0.1" FontSize="12" VerticalAlignment="Bottom"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Horizontal">
                <StackPanel
                    Width="auto">
                    <TextBlock Text="Launch Settings" 
                        FontSize="20" 
                        Margin="5,20,0,0"/>

                    <CheckBox Content="Enable Launch On Startup" 
                        Margin="10,5,0,5" 
                        Name="AutoLaunchCheckBox"
                        IsChecked="{Binding AutoLaunch, Mode=TwoWay}"
                        Click="AutoLaunchCheckBox_Click"/>

                    <CheckBox Content="Launch Minimized" 
                        Margin="10,5,0,5" 
                        Name="BackgroundRunCheckBox"
                        IsChecked="{Binding LaunchMinimized, Mode=TwoWay}"
                        Click="BackgroundRunCheckBox_Click"/>

                    <TextBlock Text="Autorun or Keybind" 
                        Margin="5,5,0,5"
                        FontSize="20"/>

                    <CheckBox Content="Autorun"
                        Margin="10,5,0,5"
                        Name="AutorunCheckBox"
                        IsChecked="{Binding Autorun, Mode=TwoWay}"
                        Checked='AutorunCheckBox_Checked'
                        Unchecked="AutorunCheckBox_Unchecked" 
                        Click="AutorunCheckBox_Click"/>

                    <CheckBox Content="Keybind"
                        Margin="10,5,0,5"
                        Name="KeybindCheckBox"
                        IsChecked="{Binding Keybind, Mode=TwoWay}"
                        Checked="KeybindCheckBox_Checked"
                        Unchecked='KeybindCheckBox_Unchecked'
                        Click="KeybindCheckBox_Click"/>

                    <StackPanel Orientation="Horizontal">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=KeybindCheckBox}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=KeybindCheckBox}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <Button Content="Start Recording" 
                            Width="100" 
                            Height="20" 
                            Margin="5,10,0,0" 
                            HorizontalAlignment="Left"
                            x:Name="RecordButton2"
                            Click="RecordButton2_Click"/>
                        <TextBox x:Name="RecordedKeybindTextBox2"
                            Width="200"
                            Height="20"
                            Margin="5,10,10,0"
                            IsReadOnly="True"
                            Text="{Binding RecordedKeybind2, Mode=TwoWay}"
                            HorizontalAlignment="Left"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel
                    Margin="20,0,0,0"
                    Width="auto">
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=ImageCheck}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=ImageCheck}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Subterfuge Mode"
                            FontSize="20"
                            Margin="0,20,0,0"/>
                        <TextBlock Text="Psuedo Device Lock Keybind: Set a keybind that will allow you to summon a fake 'Time is up' Lockscreen"
                            Margin="5,5,0,0"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Start Recording" 
                                Width="100" 
                                Height="20" 
                                Margin="5,10,0,0" 
                                HorizontalAlignment="Left"
                                x:Name="RecordButton"
                                Click="RecordButton_Click"/>
                            <TextBox x:Name="RecordedKeybindTextBox"
                                Width="200"
                                Height="20"
                                Margin="5,10,10,0"
                                IsReadOnly="True"
                                Text="{Binding RecordedKeybind, Mode=TwoWay}"
                                HorizontalAlignment="Left"/>
                        </StackPanel>
                        <TextBlock Text="Safe Mode: Changes the taskbar icon of this program to the Windows Parental Controls icon, renames the &#10;running process, and creates a fake service identical to the default Windows Parental Controls service"
                            Margin="5,10,0,5"/>
                        <CheckBox Content="Safe Mode"
                            Margin="5,0,0,5"
                            Name="SafeModeCheckBox"
                            IsChecked="{Binding IsSafeMode, Mode=TwoWay}"
                            Checked="SafeModeCheckBox_Checked"
                            Unchecked="SafeModeCheckBox_Unchecked"
                            Click="SafeModeCheckBox_Click"/>
                        <TextBlock Text="Note: Requires Program Restart"
                            Foreground="Red"
                            FontSize="9"
                            Margin="5,0,0,5"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <Button Content="Save Settings" 
            Width="100" 
            Height="30"
            VerticalAlignment="Bottom" 
            HorizontalAlignment="Right"
            Name="SaveButton"
            Click="SaveSettings_Click"/>
    </Grid>
</Window>